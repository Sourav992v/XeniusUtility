<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/activity_login"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_trans"
    tools:context="radius.xenius.sems.feeder.MainActivity">

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/ScrollView01"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:background="@color/white_trans" >

        <RelativeLayout
            android:id="@+id/RelativeLayout01"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="top|fill_vertical"
            android:layout_marginTop="10dp"
            android:background="@color/white_trans"
            android:gravity="fill_vertical" >

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:background="@color/white_trans"
                android:layout_marginLeft="80dp"
                android:scaleType="centerInside"
                android:src="@drawable/xenius_logo" />

            <RelativeLayout
                android:id="@+id/RelativeLayout02"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/imageView1"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:orientation="vertical" >

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/RelativeLayout03"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/RelativeLayout02"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="15dp"
                android:background="#01679e"
                android:orientation="vertical" >

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/RelativeLayout05"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="27dp"
                android:orientation="vertical"
                android:layout_below="@+id/RelativeLayout04"
                android:layout_alignParentLeft="true"
                android:background="@color/white_trans"
                android:layout_alignParentStart="true">

                <Button
                    android:id="@+id/btnRegister"
                    android:layout_width="160dp"
                    android:layout_height="38dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="12dp"
                    android:longClickable="false"
                    android:text="SIGN IN"
                    android:textSize="18dp"
                    android:textColor="#FFFFFF"
                    android:background="@drawable/background_button"
                    android:textStyle="bold"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true" />
            </RelativeLayout>

            <Button
                android:id="@+id/forgotPassword"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_marginTop="24dp"
                android:longClickable="false"
                android:background="@color/white_trans"
                android:clickable="true"
                android:text="Forgot Your Password? Click here to reset it."
                android:textColor="#007FFF"
                android:textSize="12dp"
                android:textStyle="bold"
                android:layout_below="@+id/RelativeLayout05"
                android:layout_centerHorizontal="true" />

            <RelativeLayout
                android:id="@+id/RelativeLayout06"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/white_trans"
                android:layout_below="@+id/forgotPassword"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="64dp">

                <TextView
                    android:id="@+id/lblMessage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:layout_alignParentLeft="true"
                    android:background="@color/white_trans"
                    android:text=""
                    android:layout_alignParentStart="true"
                    android:layout_alignParentRight="true"
                    android:gravity="center"
                    android:padding="8dp"
                    android:textSize="10dp"
                    android:layout_alignParentEnd="true" />

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textView4"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center"
                    android:text="Xenius Connected World"
                    android:textColor="#800000"
                    android:textSize="18dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="WelcomeTo"
                    android:textColor="#800000"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    android:layout_below="@+id/lblMessage"
                    android:layout_centerHorizontal="true" />
            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/RelativeLayout04"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="22dp"
                android:orientation="vertical"
                android:layout_below="@+id/RelativeLayout03"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true">

                <EditText
                    android:id="@+id/loginId"
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:paddingLeft="5dp"
                    android:textColor="@color/black"
                    android:maxLength="15"
                    android:background="@drawable/card_background_selector"
                    android:textSize="15dp"
                    android:layout_below="@+id/textView2"
                    android:layout_alignRight="@+id/textView3"
                    android:layout_alignEnd="@+id/textView3">

                    <requestFocus />
                </EditText>

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/loginId"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="50dp"
                    android:textColor="@color/black"
                    android:layout_marginTop="15dp"
                    android:text="Password :"
                    android:textSize="15dp" />

                <EditText
                    android:id="@+id/password"
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    android:layout_below="@id/textView3"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/black"
                    android:inputType="textPassword"
                    android:maxLength="15"
                    android:paddingLeft="5dp"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/card_background_selector"
                    android:textSize="15dp"
                    android:layout_alignRight="@+id/textView3"
                    android:layout_alignEnd="@+id/textView3">
                </EditText>

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="27dp"
                    android:text="Login ID :"
                    android:textSize="15dp"
                    android:textColor="@color/black"
                    android:layout_alignParentTop="true"
                    android:layout_alignLeft="@+id/loginId"
                    android:layout_alignStart="@+id/loginId"
                    android:layout_alignRight="@+id/loginId"
                    android:layout_alignEnd="@+id/loginId" />

            </RelativeLayout>

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:text="Smart Energy Management Solution"
                android:textColor="#800000"
                android:background="@color/white_trans"
                android:textSize="15dp"
                android:textStyle="bold"
                android:layout_below="@+id/RelativeLayout02"
                android:layout_centerHorizontal="true" />

        </RelativeLayout>

    </ScrollView>

</RelativeLayout>

