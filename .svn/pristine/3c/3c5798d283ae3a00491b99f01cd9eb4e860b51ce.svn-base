<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/RelativeLayout01"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="top|fill_vertical"
    android:background="#005a5a"
    android:padding="0dp"
    android:layout_marginTop=".1mm"
    android:gravity="fill_vertical"
    tools:context="radius.xenius.sems.feeder.OutageReasonJEFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:clickable="true"
        android:orientation="vertical"
        android:id="@+id/relativeLayout1"
        android:padding="0dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center_horizontal"
            android:text="Outage Reason "
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#5DADE2"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>

     <RelativeLayout
         android:layout_width="match_parent"
         android:layout_marginTop="8dp"
         android:layout_below="@+id/relativeLayout1"
         android:id="@+id/relative02"
         android:layout_height="35dp">
            <View android:id="@+id/strut"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@drawable/fragment_background"
                android:layout_centerHorizontal="true"/>
            <Button
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:background="@drawable/fragment_background"
                android:id="@+id/edit"
                android:layout_alignRight="@id/strut"
                android:layout_alignParentLeft="true"
                android:textColor="@color/yello"
                android:text="Edit"/>
            <Button
                android:layout_width="0dp"
                android:background="@drawable/fragment_background"
                android:id="@+id/edited"
                android:layout_height="35dp"
                android:layout_alignLeft="@id/strut"
                android:layout_alignParentRight="true"
                android:textColor="@color/yello"
                android:text="Edited"/>
     </RelativeLayout>

    <TextView
        android:id="@+id/titalText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="16dp"
        android:gravity="center"
        android:layout_marginTop="2dp"
        android:textColor="@color/lightyello"
        android:layout_below="@+id/relative02"
        android:textStyle="bold"
        android:textAppearance="?android:attr/textAppearanceMedium"
        />

    <RelativeLayout
        android:id="@+id/RelativeLayout03"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/titalText"
        android:background="#004040"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView
            android:id="@+id/text2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:text=""
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textSize="12dp"
            android:textStyle="bold"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
    </RelativeLayout>
    <ScrollView
        android:id="@+id/scroll2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context="com.e.xeniusapp.FeederAddSmartGateway"
        android:layout_marginTop="1dp"
        android:padding="1dp"
        android:layout_below="@+id/RelativeLayout03"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

    <LinearLayout
        android:id="@+id/outage_reasonLayout"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:gravity="center"
        android:layout_gravity="top"
        android:orientation="vertical">

    </LinearLayout>
    </ScrollView>
</RelativeLayout>
